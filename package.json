{
  "name": "bgg-extension",
  "version": "0.1.0",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "yarn start",
    "build": "yarn tsc && yarn bundle:prod",
    "prestart": "yarn build",
    "start": "concurrently \"yarn firefox\" \"yarn watch\"",
    "watch": "NODE_ENV=development tsc-watch --noClear --onSuccess \"yarn bundle:dev\"",
    "bundle:prod": "NODE_ENV=production rollup -c",
    "bundle:dev": "NODE_ENV=development rollup -c",
    "firefox": "web-ext run --firefox",
    "lint": "web-ext lint",
    "presign": "yarn build",
    "sign": "web-ext sign",
    "api:dev": "vercel dev",
    "vercel-build": "exit 0"
  },
  "dependencies": {
    "bgg-xml-api-client": "^0.1.10",
    "web-ext": "^6.8.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^21.1.0",
    "@rollup/plugin-node-resolve": "^13.2.1",
    "@rollup/plugin-replace": "^4.0.0",
    "@types/jest": "^27.4.1",
    "@vercel/node": "^1.14.1",
    "concurrently": "^7.1.0",
    "dotenv": "^16.0.0",
    "jest": "^27.5.1",
    "jest-environment-jsdom": "^27.5.1",
    "rollup": "^2.70.2",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^7.0.2",
    "ts-jest": "^27.1.4",
    "tsc-watch": "^5.0.3",
    "typescript": "^4.6.3"
  }
}
